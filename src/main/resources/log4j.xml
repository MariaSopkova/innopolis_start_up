<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j>
<configuration>
    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</pattern>>
        </encoder>
    </appender>
    >
    <logger nanme="ru.innopolis.stc12">
        <level value="debug"/>
    </logger>
    <logger nanme="org.springframework">
        <level value="info"/>
    </logger>
    <root>
        <level value="error"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>